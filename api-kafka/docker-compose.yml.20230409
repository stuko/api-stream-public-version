services:
  zookeeper-1:
    image: confluentinc/cp-zookeeper:latest # wurstmeister/zookeeper:latest
    environment:
      ZOOKEEPER_CLIENT_PORT: ${ZOOKEEPER_PORT} 
      # ZOOKEEPER_SERVERS: "${ZOOKEEPER_IP}:${ZOOKEEPER_PORT}"
      ZOOKEEPER_SERVER_ID: 1
      ZOOKEEPER_TICK_TIME: 2000
      ZOOKEEPER_INIT_LIMIT: 5
      ZOOKEEPER_SYNC_LIMIT: 2
      TZ: Asia/Seoul
    ports:
      - "${ZOOKEEPER_PORT}:${ZOOKEEPER_PORT}"
    # networks:
    #  api-net:
    #    aliases:
    #      - api-zookeeper
    restart: always
  kafka-1:
    image: confluentinc/cp-kafka:latest  # wurstmeister/kafka:latest
    ports:
      - "${KAFKA_PORT}:${KAFKA_PORT}"
    # networks:
    #  api-net:
    #    aliases:
    #      - api-kafka
    environment:
      # KAFKA_BROKER_ID: 1
      KAFKA_ADVERTISED_HOST_NAME: ${KAFKA_IP}
      # KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://${KAFKA_IP}:${KAFKA_PORT}
      # KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka-1:${KAFKA_PORT}
      # KAFKA_LISTENERS: PLAINTEXT://0.0.0.0:${KAFKA_PORT}
      # KAFKA_LISTENERS: PLAINTEXT://0.0.0.0:9092
      # KAFKA_ZOOKEEPER_CONNECT: ${ZOOKEEPER_IP}:${ZOOKEEPER_PORT}
      KAFKA_ZOOKEEPER_CONNECT: zookeeper-1:${ZOOKEEPER_PORT}
      # KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka-1:2${KAFKA_PORT},PLAINTEXT_HOST://${KAFKA_IP}:${KAFKA_PORT}
      # KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka-1:2${KAFKA_PORT},PLAINTEXT_HOST://localhost:${KAFKA_PORT}
      # KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      # KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: PLAINTEXT:PLAINTEXT
      # KAFKA_INTER_BROKER_LISTENER_NAME: PLAINTEXT
      # KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR: 1
      # KAFKA_TRANSACTION_STATE_LOG_MIN_ISR: 1
      TZ: Asia/Seoul
      # KAFKA_CREATE_TOPICS: ""
    depends_on:
      - zookeeper-1
    restart: always
